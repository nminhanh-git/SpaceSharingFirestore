<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginBottom="20dp"
    app:cardBackgroundColor="@color/light_gray"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp">

        <Switch
            android:id="@+id/available_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khả dụng"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#595959"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
          android:switchPadding="10dp"/>

        <TextView
            android:id="@+id/item_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            android:layout_below="@id/available_switch"
            android:fontFamily="@font/roboto_bold"
            android:text="Tiêu đề"
            android:textColor="#595959" />

        <ImageView
            android:id="@+id/item_ic_location"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/item_title"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_location" />

        <TextView
            android:id="@+id/item_address"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/item_title"
            android:layout_toEndOf="@id/item_ic_location"
            android:fontFamily="@font/roboto_reg"
            android:paddingRight="8dp"
            android:text="subtitle" />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@id/item_ic_price"
            android:layout_below="@id/item_ic_location"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_location"
            />

        <ImageView
            android:layout_marginTop="8dp"
            android:id="@+id/item_ic_price"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_money2" />

        <TextView
            android:id="@+id/item_textview_price"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/item_ic_price"
            android:layout_alignBottom="@id/item_ic_price"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/item_ic_price"
            android:fontFamily="@font/roboto_reg"
            android:text="3,000,000"
            android:gravity="center_vertical"
 />
    </RelativeLayout>
</android.support.v7.widget.CardView>