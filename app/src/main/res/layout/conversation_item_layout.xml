<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:background="@drawable/edit_background_inverse"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:padding="8dp"
    android:elevation="2dp"
    android:outlineProvider="background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/conversation_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_people" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/conversation_image"
        android:layout_alignBottom="@id/conversation_image"
        android:layout_toEndOf="@id/conversation_image"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/conversation_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Nguyễn Minh Anh"
            android:textColor="@color/darkest_gray" />

        <TextView
            android:id="@+id/conversation_date"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/conversation_title"
            android:layout_marginStart="16dp"
            android:text="8h50 hôm nay"
            android:textColor="@color/dark_gray" />
    </RelativeLayout>
</RelativeLayout>